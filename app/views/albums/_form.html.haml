= simple_form_for @album, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend
      = controller.action_name.capitalize
      Album
    = f.input :title
    = f.input :description, input_html:{rows: 3}
    
    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to "Cancel", albums_path, :class => 'btn'
